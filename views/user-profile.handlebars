<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <h1>{{user.username}}</h1>
        <div>Number of stories started: {{user.starters.length}}</div>
        <div>User since: {{date}}</div>
    </div>

    <div class="col-sm-8 col-sm-offset-2">
        <h3>Stories in Progress</h3>
        <ul>
            {{#each startersFalse}}
            <li class="list-group-item">
                <div class="lead">
             <a href="/starters/{{this.title}}">{{this.title}}</a>
             </div>
                  <div><small>{{this.content}}</small></div>
                <div class="right">
                  <a href="/user-profile/{{this.authorName}}">{{this.authorName}}</a>
            </li>
            {{/each}}
        </ul>
    </div>

        <h3>Finished Stories</h3>
        <ul>
            {{#each startersTrue}}
            <li class="list-group-item">
                <div class="lead">
             <a href="/starters/{{this.title}}/yarn">{{this.title}}</a>
             </div>
                  <div><small>{{this.content}}</small></div>
                <div class="right">
                  <a href="/user-profile/{{this.authorName}}">{{this.authorName}}</a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

</div>
