        <label for="character-summary">Summary</label>
        <textarea name="summary" class="form-control" id="character-summary" placeholder="Say something clever..."></textarea>
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Create character</button>
      </div>
