<div class="row">
  <div class="col-sm-6 col-sm-offset-3">

    <form method="POST" action="/starters/{{thread.slug}}/threads/{{thread._id}}?_method=PUT">
        <fieldset>
    <h1>Edit</h1>
    <legend>Because we all make mistakes...</legend>

        <h3>{{thread.content}}</h3>

    <label for="thread-content"></label>
    <input type="text" name="content" class="form-control" id="thread-content" placeholder="{{thread.content}}">

  </fieldset>

      <!-- BUTTON -->
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Save changes!</button>
      </div>
    </form>

   <div class='edit'>
        <span style="float:left">
        <p><form method="" action="/starters/{{thread.slug}}">
            <button class="btn btn-primary" type="submit">Back</button>
        </form></p></span>
    <span style="float:right">
    <p><form method="POST" action="/starters/{{thread.slug}}/threads/{{thread._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete Thread</button>
    </form></p></span>
  </div>

  </div>
</div>
